#include <iostream>
using namespace std;

int main()
{
    int soma(int num);
    void bissexto(int ano);
    void formaBinaria(int num);
    
    
    int num;
    cin >> num;
    formaBinaria(num);
    
    
    
    
    return 0;
}

int soma(int num)
{
    int soma = 0;
    int i;
        for(i = 1; i <= num; i++)
        {
            soma += i;
        }
        return soma;
}

void bissexto(int ano)
{
    if(ano % 4 == 0)
    {
       cout << "True" << endl;
    }
    else if(ano % 100 == 0)
    {
       cout << "True" << endl;
    }
    else if(ano % 400 == 0)
    {
        cout << "True" << endl;
    }
    else
    {
         cout << "False" << endl;
    }
}

void formaBinaria(int num)
{
    char binario[30], binario2[30];
    int i = 0, j, aux;
    while(num > 0)
    {
        
        if(num == 2)
            {
                binario[i] = '1';
                binario[i+1] = '0';
                i++;
                break;
            }
            else if(num == 1)
            {
                binario[i] = '0';
                binario[i+1] = '1';
                i++;
                break;
            }
            
        if(num % 2 == 0)
        {
            binario[i] = '1';
            num /= 2;
            i++;
            cout << num << endl;
        }
        else if(num % 2 == 1)
        {
            binario[i] = '0';
            num /= 2;
            i++;
            cout << num << endl;
        }
    }
    aux = i;
        for(i = 0; i <= aux; i++)
        {
            cout << binario[i];
        }
        cout << endl;
}
